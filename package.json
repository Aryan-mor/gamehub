{
  "name": "gamehub",
  "version": "0.1.0",
  "private": true,
  "main": "dist/bot.js",
  "scripts": {
    "dev": "./scripts/dev.sh",
    "build": "tsc",
    "start": "node dist/bot.js",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --reporter=verbose",
    "pre-push": "pnpm run test:ci && pnpm run lint",
    "pre-push:full": "./scripts/pre-push.sh",
    "pre-push:coverage": "./scripts/pre-push.sh --coverage",
    "bot": "tsx src/bot.ts",
    "bot:stop": "pkill -f 'pnpm bot' || pkill -f 'tsx src/bot.ts' || echo 'No bot processes found'",
    "bot:restart": "pnpm run bot:stop && sleep 2 && pnpm run bot",
    "bot:manage": "tsx src/scripts/botManager.ts",
    "bot:control": "./scripts/bot-control.sh",
    "export:bot-config": "ts-node src/scripts/exportBotConfig.ts",
    "set:bot-commands": "ts-node src/scripts/setBotCommands.ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "firebase": "^11.10.0",
    "grammy": "^1.37.0",
    "node-fetch": "2",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "telegraf": "^4.16.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/node": "^20",
    "@types/node-fetch": "^2.6.12",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9",
    "form-data": "^4.0.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "tough-cookie": "^4.1.3",
    "request": "^2.88.2",
    "form-data": "^4.0.4"
  }
}
